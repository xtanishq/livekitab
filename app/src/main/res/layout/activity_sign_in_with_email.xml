            android:inputType="textPassword"
            android:drawablePadding="4dp"
            app:boxBackgroundMode="none"
            android:drawableStart="@drawable/ic_password"
            android:textColor="@color/black"
            android:background="@drawable/round_border"
            android:padding="8dp"/>


