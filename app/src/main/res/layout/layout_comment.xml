    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relLayout1"
        android:layout_marginTop="15dp"
        android:layout_margin="16dp"
        android:background="#eaeaea">

        <RelativeLayout
            android:id="@+id/user_comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="2dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rudra Dave"
                android:id="@+id/comment_username"
                android:layout_marginLeft="10dp"
                android:textColor="@color/primaryTextColor"
                android:layout_alignParentLeft="true"
                android:textSize="15sp"
                android:fontFamily="@font/seougui"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="this is a comment"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/primaryTextColor"
                android:textSize="12sp"
                android:layout_below="@id/comment_username"
                android:fontFamily="@font/seougui" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 days ago"
                android:textColor="@color/secondaryTextColor"
                android:textSize="12sp"
                android:fontFamily="@font/seougui"
                android:id="@+id/comment_time_posted"
                android:layout_marginTop="2dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/comment"
                />



        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/relmentor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/user_comment_layout"
            >
            <TextView
                android:id="@+id/mentorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Mentor name"
                android:textStyle="bold"
                android:textColor="@color/primaryTextColor"
                android:fontFamily="@font/seougui"
                android:textSize="15sp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/mentorComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mentorName"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/seougui"
                android:text="Comment"
                android:textColor="@color/primaryTextColor"
                android:textSize="15sp" />
           <!-- <TextView
                android:id="@+id/commentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/seougui"
                android:textColor="@color/primaryTextColor"
                android:text="1 day ago"
                android:layout_below="@id/mentorComment"
                android:textSize="15sp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"/>-->


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
