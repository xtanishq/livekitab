<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/chaptername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/chaptnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp">

                </TextView>

                <TextView
                    android:id="@+id/chapter_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_toStartOf="@+id/image"
                    android:layout_toEndOf="@+id/chaptnumber"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold">
                </TextView>

                <ImageButton
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="16dp"
                    android:background="@color/transparent">

                </ImageButton>

                <LinearLayout
                    android:id="@+id/lnr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/chaptnumber"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_below="@+id/chapter_name">

                    <TextView
                        android:id="@+id/countvideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 chapter"
                        android:textSize="16dp">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginStart="8dp"
                        android:id="@+id/txtbullet">
                    </TextView>

                    <TextView
                        android:id="@+id/counttest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 Test"
                        android:layout_marginStart="8dp"
                        android:textSize="16dp">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginStart="8dp"
                        android:id="@+id/txtbullet1">
                    </TextView>
                    <TextView
                        android:id="@+id/countmaterial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 Material"
                        android:layout_marginStart="8dp"
                        android:textSize="16dp">
                    </TextView>





                </LinearLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_toRightOf="@+id/chaptnumber"
                    android:layout_below="@+id/lnr"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:background="?android:attr/listDivider" />

            </RelativeLayout>





</RelativeLayout>