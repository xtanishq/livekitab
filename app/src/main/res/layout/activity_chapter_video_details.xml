<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notclick"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#eaeaea"
    android:layout_height="match_parent"
    tools:context=".Activity.ChapterVideoDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:titleTextColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Chapter Videos"
        android:fontFamily="@font/robotoo"
        android:textColor="@color/black"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="8dp"
     >

    </TextView>

    <TextView
        android:id="@+id/viewall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View All"
        android:layout_below="@+id/toolbar"
        android:textColor="@color/black"
        android:fontFamily="@font/robotoo"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:drawablePadding="2dp"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:layout_marginEnd="16dp"
       >
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chaptervideorcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12sp"
        android:layout_marginEnd="16dp">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUICK PRACTICE"
        android:layout_marginStart="16dp"
        android:textSize="12dp"
        android:fontFamily="@font/robotoo"
        android:textColor="@color/black"
        android:layout_below="@+id/chaptervideorcv"
        android:layout_marginTop="16dp">

    </TextView>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/txt1">


        <LinearLayout
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

<androidx.cardview.widget.CardView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_gravity="center"
    app:cardElevation="8dp"
    app:cardCornerRadius="100dp">

    <ImageView
        android:id="@+id/test_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/search"
        android:layout_gravity="center">

    </ImageView>


</androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video Test"
                android:fontFamily="@font/robotoo"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/study"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_toRightOf="@+id/test">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                app:cardElevation="8dp"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/study_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/kitab"
                    android:layout_gravity="center"
                    android:background="@color/transparent">

                </ImageView>


            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Study material"
                android:fontFamily="@font/robotoo"
                android:textStyle="bold"
                android:textColor="@color/black">

            </TextView>

        </LinearLayout>


    </RelativeLayout>


